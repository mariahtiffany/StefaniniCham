        <script><![CDATA[(function() {
  /* populate the 'data' object */
  /* e.g., data.table = $sp.getValue('table'); */

	var user = gs.getUser();
	var grUser = new GlideRecord('sys_user');
	
	if (!grUser.get(user.getID()))
		return;
	
	var fields = ['title', 'company', 'department', 'location'];
	data.missingFields = fields.filter(field => !grUser.getValue(field));
	data.isProfileCompleted = data.missingFields.length === 0;
})();]]></script>
