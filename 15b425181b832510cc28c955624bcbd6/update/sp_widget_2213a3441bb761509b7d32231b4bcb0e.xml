        <category>custom</category>
        <client_script><![CDATA[api.controller=function() {
  /* widget controller */
  var c = this;
	
	var requiredDocuments = [
		{ key: 'INO_DOW_DRIVER_LICENSE', name: 'Driver\'s license' },
		{ key: 'INO_DOW_RESIDENCE_CHECKING', name: 'Residence checking' },
	];

	c.missingDocuments = requiredDocuments.filter(function (doc) {
		return !localStorage.getItem(doc.key);
	});
	c.isDocumentComplete = c.missingDocuments.length === 0;
};]]></client_script>
        <controller_as>c</controller_as>
        <css>.ino-dow-your-progress {
  margin-bottom: 3rem;
  display: flex;
  align-items: center;
  flex-direction: column;
  
  h2 {
  	font-size: 3rem;
    margin-bottom: 2rem;
  }
  
  p {
    font-size: 2rem;
    margin: 0;
  }
  
  h2, p {
    color: #36424F;
  }
}

.ino-dow-your-progress-cards {
	margin-top: 32px;
  
  display: flex;
  gap: 2rem;

  @media(max-width: 1024px) {
  	flex-direction: column;
  }
}

.ino-dow-your-progress-card {
  box-shadow: $default-box-shadow;
  flex: 1;
  display: flex;
  flex-direction: column;
  
  h3 {
  	font-size: 20px;
    margin: 0;
    color: white;
    text-transform: uppercase;

    @media(max-width: 1024px) {
  	  font-size: 18px;
    }
  }
  
  p {
    font-size: 14px;
  }
}

.ino-progress-button {
  margin-top: auto;
  margin-left: auto;
  text-transform: uppercase;
  display: flex;
  align-items: center;
  background-color: #B92312;
  color: #FFF !important;
  border-radius: $default-border-radius;
  padding: 8px 16px;
  
  svg {
  	width: 15px;
    height: 15px;
    margin-left: 10px;
  }
}

.ino-dow-your-progress-card-heading {
  padding: 8px 16px;
  background: #E2221C;
  height: 70px;
  border-radius: 5px 5px 0 0;
  
  display: flex;
  align-items: center;
  
  svg {
  	height: 34px;
    width: 34px;
    
    margin-right: 16px;
  }
}

.ino-dow-your-progress-card-heading--completed,
.ino-progress-button-completed {
  background-color: #01B26E;
}

.ino-dow-your-progress-card-body {
  background-color: white;
  border: 2px solid #E2221C;
  border-radius: 0 0 5px 5px;
  
  padding: 16px;

  display: flex;
  flex-direction: column;
  flex: 1;
}

.ino-dow-your-progress-card-body--completed {
	border-color: #01B26E;
}
</css>
